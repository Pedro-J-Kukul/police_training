# Environment variables

# Server configuration
export SERVER_PORT=8080
export ENVIRONMENT=development

# Database configuration
export DB_DSN="user:password@tcp(localhost:3306)/dbname"
export DB_MAX_OPEN_CONNS=25
export DB_MAX_IDLE_CONNS=25
export DB_CONN_MAX_LIFETIME=5m

# CORS settings
export CORS_TRUSTED_ORIGINS="http://localhost http://127.0.0.1"

# Rate limiter settings
export RATE_LIMIT_RPS=2
export RATE_LIMIT_BURST=4
export RATE_LIMIT_ENABLED=true


# SMTP settings
export SMTP_HOST="smtp.example.com"
export SMTP_PORT=587
export SMTP_USERNAME="your_username"
export SMTP_PASSWORD="your_password"
export SMTP_SENDER="YourApp <noreply@example.com>"